<h1>Listing expenses</h1>

<%= link_to 'Next expense to sort', next_to_sort_expenses_path %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Operation date</th>
      <th>Bank</th>
      <th>Title</th>
      <th>Value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.operation_date %></td>
        <td><%= expense.bank.name %></td>
        <td><%= expense.title %></td>
        <td><%= expense.value %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expense', new_expense_path %>
